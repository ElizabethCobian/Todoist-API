{
  "name": "todoist-fe",
  "version": "1.0.0",
  "description": "Bootcamp Todoist Frontend ",
  "main": "index.js",
  "scripts": {
    "lint": "eslint ./pom/pages",
    "test": "testcafe chrome ./pom/tests/todayTask.test.js",
    "test-smoke": "testcafe chrome ./pom/tests --test-meta type=smoke --reporter allure",
    "test-projects": "testcafe chrome ./pom/tests/projects.test.js",
    "test-task": "testcafe chrome ./pom/tests/todayTask.test.js",
    "test-login": "testcafe chrome:headless,firefox:headless ./pom/tests/login.test.js",
    "test-api": "newman run './api_testing/Todoist-API.postman_collection.json' -e './api_testing/Todoist-API-Varibles.postman_environment.json'"
  },
  "author": "Elizabeth Cobian",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^10.0.0",
    "newman": "5.2.4",
    "testcafe": "1.15.1",
    "testcafe-reporter-allure": "^1.0.5"
  },
  "devDependencies": {
    "eslint": "7.31.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-javascript": "1.3.4",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "5.1.0",
    "eslint-plugin-standard": "5.0.0",
    "eslint-plugin-testcafe": "0.2.1",
    "type": "module"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ElizabethCobian/Todoist-Frontend.git"
  },
  "keywords": [],
